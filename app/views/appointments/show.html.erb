<h2>Appointments</h2>

<strong>Doctors</strong>
<br>
<% @appointments.each do |appt| %>
  <%= link_to appt.doctor.name, doctor_path(appt.doctor.id) %><br>
<% end %>
<br></br>
<strong>Patients</strong>
<br>
<% @appointments.each do |appt| %>
  <%= link_to appt.patient.name, patient_path(appt.patient.id) %><br>
<% end %>
<br><br>
<strong>Appointment Schedule</strong>
<br>
<% @appointments.each do |appt| %>
  <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %><br>
<% end %>